<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>RestrictionFilter</filter-name>
        <filter-class>Filter.RestrictionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RestrictionFilter</filter-name>
        <url-pattern>/restreint/*</url-pattern>
        <url-pattern>/GenererTable</url-pattern>
        <url-pattern>/VoirPanier</url-pattern>
        <url-pattern>/GenererArticle</url-pattern>
        <url-pattern>/AjouterAuPanier</url-pattern>
        <url-pattern>/AfficherCommandes</url-pattern>
    </filter-mapping>

</web-app>